<div class="container">
    
    <div>
        <h2>User info</h2>
        <div>
            <!--プロフィール画像-->
        </div>
        <!--テーブルコマンドで、プロフィール書く-->
    </div>
    
    <div>
        <h2>New book</h2>
        
        <%= form_with model: @book do |f| %>
        <div>
            <%= f.label :title %><br>
            <%= f.text_field :title %>
        </div>
        <div>
            <%= f.label :opnion %><br>
            <%= f.text_area :body %>
        </div>
        <div>
            <%= f.submit "Create Book" %>
        </div>
        <% end %>
    </div>
</div>

<div class="container">
    <h2>Books</h2>
    <div>
        <% @books.each do |book| %>
        <table>
            <tr>
                <th></th>
                <th>Title</th>
                <th>Opinion</th>
            </tr>
            
            <tr>
                <!--<td>プロフィール画像</td>-->
                <td><%= book.title %></td>
                <td><%= book.body %></td>
            </tr>
        </table>
        <% end %>
    </div>
</div>
