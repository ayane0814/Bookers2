<div class="container">
    
    <div>
        <h2>User info</h2>
        <div>
            <%= image_tag user.get_profile_image(100, 100) %>
        </div>
        <table>
            <tr>
                <th>name</th>
                <td><%= user.name %></td>
            </tr>
            
            <tr>
                <th>introduction</th>
                <td><%= user.introduction %></td>
            </tr>
        </table>
        
        <div>
            <%= link_to "編集", edit_user_path(user.id) %>
        </div>
    </div>
    
    <div>
        <h2>New book</h2>
        
        <%= form_with model: book do |f| %>
        <div>
            <%= f.label :title %><br>
            <%= f.text_field :title %>
        </div>
        <div>
            <%= f.label :opnion %><br>
            <%= f.text_area :body %>
        </div>
        <div>
            <%= f.submit "Create Book" %>
        </div>
        <% end %>
    </div>
</div>