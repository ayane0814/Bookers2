<!--昨日はアイコンの画像つけたとこまで-->
<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/a7b69aa32a.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-light" style="background-color: #3f3f3f;">
        <div class="container" >
          <a class="navbar-brand text-white" href="/">Bookers</a>
          <!--ハンバーガーアイコン-->
          <button class="navbar-toggler" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown" >
            <ul class="navbar-nav ml-auto">
              <% if user_signed_in? %>
              <li>
                <%= link_to user_path(current_user.id), class: "nav-link text-white" do %>
                  <i class="fa-solid fa-house"></i><span>Home</span>
                <% end %>
              </li>
              <li>
                <%= link_to users_path, class: "nav-link text-white" do %>
                  <i class="fa-solid fa-users"></i><span> Users</span>
                <% end %>
              </li>
              <li>
                <%= link_to books_path, class: "nav-link text-white" do %>
                  <i class="fa-solid fa-book-open"></i><span> Books</span>
                <% end %>
              </li>
              <li>
                <%= link_to destroy_user_session_path, method: :delete, class: "nav-link text-white" do %>
                  <i class="fa-solid fa-right-from-bracket"></i><span> Log out</span>
                <% end %>
              </li>
              <% else %>
              <li>
                <%= link_to root_path, class: "nav-link text-white" do %>
                  <i class="fa-solid fa-house"></i><span> Home</span>
                <% end %>
              </li>
              <li>
                <%= link_to homes_about_path, class: "nav-link text-white" do %>
                  <i class="fa-solid fa-link"></i><span> About</span>
                <% end %>
              </li>
              <li>
                <%= link_to new_user_registration_path, class: "nav-link text-white" do %>
                  <i class="fa-solid fa-user-plus"></i><span> Sign up</span>
                <% end %>
              </li>
              <li>
                <%= link_to new_user_session_path, class: "nav-link text-white" do %>
                  <i class="fa-solid fa-right-to-bracket"></i><span> Log in</span>
                <% end %>
              </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    
    <main>
      <%= yield %>
    </main>
    
    <footer>
      <div class="text-center pt-5 pb-3">
        CopyRight Infratop.inc
      </div>
    </footer>
  </body>
</html>
