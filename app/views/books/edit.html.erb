<div class="Editing Book">
    <%= form_with model: @book do |f| %>
    <div>
        <%= f.label :title %>
        <%= f.text_field :title %>
    </div>
    <div>
        <%= f.label :opinion %>
        <%= f.text_area :body %>
    </div>
    <div>
        <%= f.submit "Update Book" %>
    </div>
    <% end %>
    <div>
        <%= link_to "Show", book_path(@book.id) %>
        <span>|</span>
        <%= link_to "Back", books_path %>
    </div>
    
</div>