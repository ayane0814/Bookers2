<div class="container">
    <div class="row">
        <%= render 'list', user: @user_info, book: @book_new %>
        
        <div class="offset-md-1"></div>
        
        <div class="col-md-8">
            <h2>Books</h2>
            <div>
                <table class="table">
                    <tr>
                        <th></th>
                        <th>Title</th>
                        <th>Opinion</th>
                    </tr>
                    
                    <% @books.each do |book| %>
                    <tr>
                        <td><%= image_tag book.user.get_profile_image(80, 80) %></td>
                        <td><%= link_to book.title, book_path(book.id) %></td>
                        <td><%= book.body %></td>
                    </tr>
                    <% end %>
                </table>
                
            </div>
        </div>
    </div>
</div>