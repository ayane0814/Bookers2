<div class="container">
    <div class="row">
        <div class="col-md-3">
            <%= render 'books/list', user: @user_info, book: @book_new %>
        </div>
        
        <div class="col-md-8 offset-md-1">
            <h2>Books</h2>
            
            <table class="table">
                <tr>
                    <th></th>
                    <th>Title</th>
                    <th>Oponion</th>
                </tr>
                
                <% @books.each do |book| %>
                <tr>
                    <td>
                        <%= link_to user_path(book.user_id) do %>
                            <%= image_tag @user.get_profile_image(80, 80) %>
                        <% end %>
                    </td>
                    <td><%= link_to book.title, book_path(book.id) %></td>
                    <td><%= book.body %></td>
                </tr>
                <% end %>
            </table>
        </div>
    </div>
</div>
