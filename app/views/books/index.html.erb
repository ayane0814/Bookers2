<%= render 'list', user: @user, book: @book_new %>

<div class="container">
    <h2>Books</h2>
    <div>
        <% @books.each do |book| %>
        <table>
            <tr>
                <th></th>
                <th>Title</th>
                <th>Opinion</th>
            </tr>
            
            <tr>
                <td><%= image_tag @user.get_profile_image(50, 50) %></td>
                <td><%= link_to book.title, book_path(book.id) %></td>
                <td><%= book.body %></td>
            </tr>
        </table>
        <% end %>
    </div>
</div>
